{% capture footer_contents %}
  <div class="footer-text">
    &copy; Copyright {{ site.time | date: '%Y' }}
    {{ site.first_name }}
    {{ site.middle_name }}
    {{ site.last_name }}. {{ site.footer_text }}
    {% if site.impressum_path %}
      <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
    {% endif %}
    {% if site.last_updated %}
      Last updated: {{ 'now' | date: '%B %d, %Y' }}.
    {% endif %}
  </div>

  <!-- ClustrMaps -->
  <div class="clustrmaps-footer" style="margin-top: 0.75rem; text-align: center;">
    <a href="https://clustrmaps.com/site/XXXXXXXX" title="Visit tracker">
      <img
        src="//www.clustrmaps.com/map_v2.png?d=XXXXX&cl=ffffff"
        alt="Visitor map"
        style="width: 220px; opacity: 0.85;"
      />
    </a>
  </div>
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0 text-center">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include newsletter.liquid %}
    {% endif %}

    <div class="container text-center">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}
